// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Work {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  reviews     Review[]
}

model Review {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  workId      Int
  work        Work   @relation(fields: [workId], references: [id])
}
